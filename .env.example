# Database
DATABASE_URL="postgresql://username:password@host/database?sslmode=require"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"  # Change to your production URL
NEXTAUTH_SECRET="your-nextauth-secret-key-min-32-chars"

# Optional: Upload/Storage (if using file uploads)
# UPLOADTHING_SECRET=""
# UPLOADTHING_APP_ID=""

# Email service (Resend) - Required for email verification and password reset
RESEND_API_KEY="re_your_actual_key_here"
RESEND_FROM_EMAIL="no-reply@yourdomain.com"

# Security Settings - Update with your actual domains
ALLOWED_ORIGINS="http://localhost:3000,https://bikfayalist.netlify.app,https://bikfayalist.com,https://www.bikfayalist.com"
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

